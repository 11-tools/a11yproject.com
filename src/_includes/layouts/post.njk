---
layout: layouts/base.njk
templateClass: template-post
---

<div class="l-post" itemscope itemtype="http://schema.org/BlogPosting">
	<header class="l-post__header">
		<div class="l-post__category c-post__category">
			<p>
				<a class="c-post__category__link" href="/posts/#{{ category | slugify }}">
					{{ category }}
				</a>
			</p>
		</div>

		<h1 id="title" class="l-post__title c-post__title" itemprop="name headline">
			{{ title | safe }}
		</h1>

		<p id="metadata" class="l-post__metadata c-post__metadata">
			{% if author %}
				<span class="c-post__metadata--author">
					By:&#8194;<a class="c-post__metadata-link" href="/authors/#{{ author | slugify }}">{{ author }}</a><span class="u-hide-visually">.</span>
				</span>
			{% endif %}
			{% if date %}
				<span class="c-post__metadata--published">
					Published:&#8194;<time datetime="{{ page.date | htmlDateString }}">{{ page.date | htmlDateString }}</time><span class="u-hide-visually">.</span>
				</span>
			{% endif %}
			{% if last_updated %}
				<span class="c-post__metadata--updated">
					Updated:&#8194;<time datetime="{{ last_updated | htmlDateString }}">{{ last_updated | htmlDateString }}</time><span class="u-hide-visually">.</span>
				</span>
			{% endif %}
		</p>
	</header>

	<div data-content id="short-answer" class="l-post__body" itemprop="articleBody">

		{% include "nav/toc.njk" %}

		<div class="l-post__content c-content c-content--post">
			{{ content | safe }}

			{% if updated_by %}
				<p class="c-last-updated__body">This post was last updated by <a href="/authors/#{{ updated_by | slugify }}">{{ updated_by }}</a>.
			{% endif %}

			{% if further_reading %}
				{% include "further-reading.njk" %}
			{% endif %}
		<div>
	</div>

	{% include "nav/recommended-reading.njk" %}

</div>
